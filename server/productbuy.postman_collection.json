{
  "info": {
    "_postman_id": "b1e2c3d4-5678-4321-9abc-def012345678",
    "name": "ProductBuy API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "userToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Buy Products",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productIds\": [\"PRODUCT_ID_1\", \"PRODUCT_ID_2\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/product-buy/buy",
          "host": ["{{baseUrl}}"],
          "path": ["product-buy", "buy"]
        }
      },
      "response": []
    },
    {
      "name": "Get Bought Products",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/product-buy",
          "host": ["{{baseUrl}}"],
          "path": ["product-buy"]
        }
      },
      "response": []
    }
  ]
}
